@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>
<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" placeholder="Search" asp-for="SearchTerm" />
            <span>
                <button class="btn btn-outline-secondary">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<div><a asp-page="./Edit" class="btn btn-success">Add New Restaurant</a> &nbsp; <a asp-page="./ClientRestaurants" class="btn btn-primary">View Restaurants (DataTables)</a></div>
<br />

<!--Render restaurants using partial views-->
@foreach (var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
    <br />
}



@if (Model.Message != null)
{
    <div class="alert alert-success">@Model.Message</div>
}

@section footer
{
    @Model.ConfigMessage
}
