@page "{restaurantId:int}"
@model OdeToFood.Pages.Restaurants.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary">@Model.Restaurant.Name</h1>

<div class="form-group">
    <label class="text-">Id</label>
    <label class="form-control">
        @Model.Restaurant.Id
    </label>
</div>


<div class="form-group">
    <label class="text-">Location</label>
    <label class="form-control">
        @Model.Restaurant.Location
    </label>
</div>

<div class="form-group">
    <label class="text-">Cuisine</label>
    <label class="form-control">
        @Model.Restaurant.Cuisine
    </label>
</div>

@if(Model.Message != null)
{
    <div class="alert alert-success">@Model.Message</div>
}
<a asp-page="./List" class="btn btn-primary" >All Restaurants</a>

